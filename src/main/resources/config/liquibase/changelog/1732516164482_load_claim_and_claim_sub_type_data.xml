<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="1732516164482" author="matellio" labels="data">

    <!-- Truncate tables before loading data -->
    <sql>
      TRUNCATE TABLE claim_sub_type CASCADE;
      TRUNCATE TABLE claim_type CASCADE;
    </sql>

    <!-- Reset sequences -->
    <sql>
      ALTER SEQUENCE claim_sub_type_id_seq RESTART WITH 1;
      ALTER SEQUENCE claim_type_id_seq RESTART WITH 1;
    </sql>

    <!-- Load data into tables -->
    <loadData
      file="config/liquibase/data/claim_type_data.csv"
      separator=";"
      tableName="claim_type">
      <column name="id" type="numeric"/>
      <column name="name" type="string"/>
      <column name="description" type="string"/>
      <column name="status" type="boolean"/>
      <column name="created_at" type="timestamp"/>
      <column name="updated_at" type="timestamp"/>
    </loadData>

    <loadData
      file="config/liquibase/data/claim_sub_type_data.csv"
      separator=";"
      tableName="claim_sub_type">
      <column name="id" type="numeric"/>
      <column name="name" type="string"/>
      <column name="description" type="string"/>
      <column name="claim_type_id" type="numeric"/>
      <column name="sla_breach_days" type="numeric"/>
      <column name="status" type="boolean"/>
      <column name="created_at" type="timestamp"/>
      <column name="updated_at" type="timestamp"/>
    </loadData>

  </changeSet>
  <changeSet id="1732516429730" author="matellio" labels="data">

    <!-- Update sequences based on current max ID -->
    <sql>
      SELECT setval('claim_sub_type_id_seq', (SELECT MAX(id) FROM claim_sub_type), true);
      SELECT setval('claim_type_id_seq', (SELECT MAX(id) FROM claim_type), true);
    </sql>

  </changeSet>
</databaseChangeLog>
