<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
  <changeSet id="1731053568418" author="matellio">
    <createTable tableName="user_role">
      <column name="user_id" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="role_id" type="bigint">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <!-- Updated foreign key constraint to reference the jhi_user table -->
    <addForeignKeyConstraint
      baseTableName="user_role" baseColumnNames="user_id"
      referencedTableName="jhi_user" referencedColumnNames="id"
      constraintName="fk_user_role_jhi_user"/>

    <addForeignKeyConstraint
      baseTableName="user_role" baseColumnNames="role_id"
      referencedTableName="roles" referencedColumnNames="id"
      constraintName="fk_user_role_role"/>
  </changeSet>
</databaseChangeLog>
