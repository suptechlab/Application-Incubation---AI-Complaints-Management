<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="1735900416367" author="matellio">
    <createTable tableName="temp_document">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="external_document_id" type="varchar(255)" remarks="External Document ID">
        <constraints nullable="false"/>
      </column>
      <column name="title" type="varchar(255)" remarks="Title of the document">
        <constraints nullable="false"/>
      </column>
      <column name="original_title" type="varchar(255)" remarks="Original title of the document">
        <constraints nullable="false"/>
      </column>
      <!-- User who created the ticket -->
      <column name="uploaded_by" type="bigint">
        <constraints nullable="true"/>
      </column>
      <!-- Timestamp when the document was uploaded -->
      <column name="uploaded_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>
