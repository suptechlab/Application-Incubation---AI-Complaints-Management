<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd">

  <changeSet id="1738838476103" author="matellio">
    <!-- Load data into tables -->
    <loadData
      file="config/liquibase/data/notification_01_template_master.csv"
      separator=","
      tableName="template_master">
      <column name="template_key" type="string"/>
      <column name="template_name" type="string"/>
      <column name="template_type" type="string"/>
      <column name="subject" type="string"/>
      <column name="content" type="string"/>
      <column name="supported_variables" type="string"/>
      <column name="status" type="boolean"/>
      <column name="created_by" type="numeric"/>
      <column name="created_at" type="timestamp"/>
      <column name="updated_by" type="numeric"/>
      <column name="updated_at" type="timestamp"/>
      <column name="is_general" type="boolean"/>
      <column name="organization_id" type="numeric"/>
      <column name="user_type" type="numeric"/>
      <column name="is_static" type="boolean"/>
    </loadData>

    <!-- Update sequences based on current max ID -->
    <sql>
      SELECT setval('template_master_id_seq', (SELECT MAX(id) FROM template_master), true);
    </sql>
  </changeSet>
</databaseChangeLog>
