<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="1730800038862" author="matellio">
    <addColumn tableName="jhi_user">
      <column name="status" type="int">
        <constraints nullable="true"/>
      </column>
      <column name="is_password_set" type="boolean">
        <constraints nullable="true"/>
      </column>
    </addColumn>
  </changeSet>
  <changeSet id="1730803119223" author="matellio">
    <modifyDataType tableName="jhi_user" columnName="login" newDataType="varchar(255)"/>
    <modifyDataType tableName="jhi_user" columnName="email" newDataType="varchar(255)"/>
  </changeSet>
  <changeSet id="1730815579530" author="matellio">
    <modifyDataType tableName="jhi_user" columnName="created_by" newDataType="varchar(255)"/>
    <modifyDataType tableName="jhi_user" columnName="last_modified_by" newDataType="varchar(255)"/>
  </changeSet>
  <changeSet id="1730887977377" author="matellio">
    <modifyDataType tableName="jhi_user" columnName="first_name" newDataType="varchar(255)"/>
  </changeSet>

  <changeSet id="1730991358417" author="matellio">
    <addColumn tableName="jhi_user">
      <column name="identificacion" type="varchar(20)" remarks="identifier">
        <constraints nullable="true"/>
      </column>
      <column name="identificacionData" type="jsonb" remarks="identification object">
        <constraints nullable="true"/>
      </column>
      <column name="ruc" type="varchar(20)" remarks="The RUC (Taxpayer Registration Number) of the organization">
        <constraints nullable="true"/>
      </column>
    </addColumn>
  </changeSet>
  <changeSet id="1731048353676" author="matellio">
    <renameColumn tableName="jhi_user" oldColumnName="identificacionData" newColumnName="identificacion_data"/>
  </changeSet>

</databaseChangeLog>
