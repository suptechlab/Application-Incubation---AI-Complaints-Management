<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd">

  <changeSet id="1731476673420" author="matellio">
    <createTable tableName="template_master">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="template_key" type="VARCHAR(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="template_name" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="template_type" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="subject" type="VARCHAR(255)"/>
      <column name="content" type="TEXT"/>
      <column name="supported_variables" type="TEXT"/>
      <column name="status" type="BOOLEAN" defaultValueBoolean="true"/>
      <column name="created_by" type="BIGINT"/>
      <column name="created_at" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP"/>
      <column name="updated_by" type="BIGINT"/>
      <column name="updated_at" type="TIMESTAMP"/>
    </createTable>
    <addForeignKeyConstraint
      baseTableName="template_master" baseColumnNames="created_by"
      referencedTableName="jhi_user" referencedColumnNames="id"
      constraintName="fk_template_master_created_by_jhi_user"/>
    <addForeignKeyConstraint
      baseTableName="template_master" baseColumnNames="updated_by"
      referencedTableName="jhi_user" referencedColumnNames="id"
      constraintName="fk_template_master_updated_by_jhi_user"/>
  </changeSet>

  <changeSet  id="1733915027013" author="matellio">
    <dropUniqueConstraint  catalogName="cat"
                           constraintName="template_master_template_key_key"
                           schemaName="public"
                           tableName="template_master"
                           uniqueColumns="template_key"/>
    <addColumn tableName="template_master">
      <column name="is_general" type="BOOLEAN" remarks="Indicates whether the template is general or organization-specific. true for general templates, false for organization-specific templates." defaultValueBoolean="false">
        <constraints nullable="false"/>
      </column>
      <column name="organization_id" type="BIGINT" remarks="Represents the ID of the organization associated with the template. NULL indicates no specific organization.">
        <constraints nullable="true"/>
      </column>
      <column name="user_type" type="int" remarks="Denotes the user type for which the template is created. Possible values: 0 - SEPS, 1 - FI, 2 - Customer." defaultValue="0">
        <constraints nullable="false"/>
      </column>
      <column name="is_static" type="BOOLEAN" remarks="Specifies whether the template is static. true indicates that the template cannot be copied, while false allows users to create a customized copy of the template." defaultValueBoolean="false">
        <constraints nullable="false"/>
      </column>
    </addColumn>

    <!-- Add unique constraint on template_key, is_general, organization_id, and user_type -->
    <addUniqueConstraint tableName="template_master" columnNames="template_key, is_general, organization_id, user_type" constraintName="uq_template_key_is_general_organization_user_type"/>
  </changeSet>

  <changeSet id="1734026430880" author="matellio">
    <!-- Truncate tables before loading data -->
    <sql>
      TRUNCATE TABLE template_master CASCADE;
    </sql>

    <!-- Reset sequences -->
    <sql>
      ALTER SEQUENCE template_master_id_seq RESTART WITH 1;
    </sql>
    <!-- Load data into tables -->
    <loadData
      file="config/liquibase/data/new_template_master.csv"
      separator=","
      tableName="template_master">
      <column name="template_key" type="string"/>
      <column name="template_name" type="string"/>
      <column name="template_type" type="string"/>
      <column name="subject" type="string"/>
      <column name="content" type="string"/>
      <column name="supported_variables" type="string"/>
      <column name="status" type="boolean"/>
      <column name="created_by" type="numeric"/>
      <column name="created_at" type="timestamp"/>
      <column name="updated_by" type="numeric"/>
      <column name="updated_at" type="timestamp"/>
      <column name="is_general" type="boolean"/>
      <column name="organization_id" type="numeric"/>
      <column name="user_type" type="numeric"/>
      <column name="is_static" type="boolean"/>
    </loadData>

    <!-- Update sequences based on current max ID -->
    <sql>
      SELECT setval('template_master_id_seq', (SELECT MAX(id) FROM template_master), true);
    </sql>
  </changeSet>

  <changeSet id="1734471930845" author="matellio">
    <!-- Truncate tables before loading data -->
    <sql>
      TRUNCATE TABLE template_master CASCADE;
    </sql>

    <!-- Reset sequences -->
    <sql>
      ALTER SEQUENCE template_master_id_seq RESTART WITH 1;
    </sql>
    <!-- Load data into tables -->
    <loadData
      file="config/liquibase/data/updated_template_master.csv"
      separator=","
      tableName="template_master">
      <column name="template_key" type="string"/>
      <column name="template_name" type="string"/>
      <column name="template_type" type="string"/>
      <column name="subject" type="string"/>
      <column name="content" type="string"/>
      <column name="supported_variables" type="string"/>
      <column name="status" type="boolean"/>
      <column name="created_by" type="numeric"/>
      <column name="created_at" type="timestamp"/>
      <column name="updated_by" type="numeric"/>
      <column name="updated_at" type="timestamp"/>
      <column name="is_general" type="boolean"/>
      <column name="organization_id" type="numeric"/>
      <column name="user_type" type="numeric"/>
      <column name="is_static" type="boolean"/>
    </loadData>

    <!-- Update sequences based on current max ID -->
    <sql>
      SELECT setval('template_master_id_seq', (SELECT MAX(id) FROM template_master), true);
    </sql>
  </changeSet>
</databaseChangeLog>
