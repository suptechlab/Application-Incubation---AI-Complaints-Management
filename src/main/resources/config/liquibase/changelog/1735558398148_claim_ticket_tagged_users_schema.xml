<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="1735558484194" author="matellio">
    <!-- Create the ticket_tagged_users table -->
    <createTable tableName="claim_ticket_tagged_users" remarks="Table to store tagged users for tickets.">
      <column name="id" type="BIGINT" autoIncrement="true" remarks="Primary key for the table.">
        <constraints primaryKey="true" />
      </column>
      <column name="ticket_id" type="BIGINT" remarks="Foreign key referencing the tickets table.">
        <constraints nullable="false" />
      </column>
      <column name="user_id" type="BIGINT" remarks="Foreign key referencing the users table.">
        <constraints nullable="false" />
      </column>
      <column name="created_at" type="TIMESTAMP" remarks="Timestamp when the user was tagged.">
        <constraints nullable="false" />
      </column>
    </createTable>

    <!-- Add foreign key constraint for ticket_id -->
    <addForeignKeyConstraint
      baseTableName="claim_ticket_tagged_users"
      baseColumnNames="ticket_id"
      referencedTableName="claim_ticket"
      referencedColumnNames="id"
      onDelete="CASCADE"
      constraintName="fk_claim_ticket_tagged_users_ticket_id"
      remarks="Links ticket_claim_tagged_users to tickets table." />

    <!-- Add foreign key constraint for user_id -->
    <addForeignKeyConstraint
      baseTableName="claim_ticket_tagged_users"
      baseColumnNames="user_id"
      referencedTableName="jhi_user"
      referencedColumnNames="id"
      onDelete="CASCADE"
      constraintName="fk_ticket_claim_tagged_users_user_id"
      remarks="Links ticket_claim_tagged_users to users table." />
  </changeSet>
</databaseChangeLog>
